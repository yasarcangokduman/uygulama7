<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonkaydet"
        android:layout_width="298dp"
        android:layout_height="64dp"
        android:layout_marginBottom="34dp"
        android:text="Kaydet"
        app:layout_constraintBottom_toTopOf="@+id/textViewsonuc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextyas" />

    <TextView
        android:id="@+id/textViewsonuc"
        android:layout_width="79dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="310dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonkaydet"
        app:layout_constraintTop_toBottomOf="@+id/buttonkaydet" />

    <EditText
        android:id="@+id/editTextyas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="223dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="text"
        android:minWidth="100dp"
        android:minHeight="48dp"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/buttonkaydet"
        app:layout_constraintStart_toStartOf="@+id/buttonkaydet"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>